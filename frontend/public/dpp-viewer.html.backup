        <script>
            (function () {
                // Stel hier de percentages en labels in
                const shares = [
                    { key: 'Boer', pct: 6, className: 'seg-farmer' },
                    { key: 'Transport', pct: 10, className: 'seg-transport' },
                    { key: 'Verwerker (Ginning)', pct: 8, className: 'seg-ginner' },
                    { key: 'Spinnerij (Garen)', pct: 15, className: 'seg-spinner' },
                    { key: 'Weverij (Stof)', pct: 18, className: 'seg-weaver' },
                    { key: 'Confectiefabriek', pct: 43, className: 'seg-factory' }
                ];

                const bar = document.getElementById('revenueBar');
                const legend = document.getElementById('revenueLegend');

                // Maak segments
                shares.forEach(item => {
                    const seg = document.createElement('div');
                    seg.className = 'segment ' + item.className;
                    // gebruik flex-basis op percentage voor correcte breedte, met min width fallback
                    seg.style.flex = `0 0 ${item.pct}%`;
                    seg.style.maxWidth = `${item.pct}%`;
                    seg.setAttribute('title', `${item.key}: ${item.pct}%`);
                    // label weergave: als segment te smal is, toon alleen pct via aria-label
                    const minLabelWidth = 8; // px threshold, browsers handle text crop
                    seg.innerHTML = `${item.pct}% ${item.key}`;
                    bar.appendChild(seg);

                    // legend item
                    const li = document.createElement('div');
                    li.className = 'legend-item';
                    li.innerHTML = `<span class="legend-color" style="background:${getComputedStyle(seg).backgroundColor || ''}"></span><span>${item.key} ‚Äî ${item.pct}%</span>`;
                    legend.appendChild(li);
                });

                // Accessibility: ensure bar has descriptive aria value
                const ariaParts = shares.map(s => `${s.key} ${s.pct} percent`);
                bar.setAttribute('aria-label', 'Verdeling opbrengst: ' + ariaParts.join(', '));

            })();
        </script>

