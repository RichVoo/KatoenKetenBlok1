                    <div class="revenue-sub">Benadering: percentage van de productiewaarde per stakeholder</div>
                </div>
                <div class="revenue-sub" style="font-weight:700; color:#0f172a;">Totaal: 100%</div>
            </div>

            <!-- bar -->
            <div class="revenue-bar" id="revenueBar" role="img"
                aria-label="Horizontale balk met procentuele verdeling per stakeholder">
                <!-- segments worden door JS toegevoegd -->
            </div>

            <!-- legend -->
            <div class="revenue-legend" id="revenueLegend" aria-hidden="false" style="margin-top:14px;">
                <!-- legend items door JS -->
            </div>
