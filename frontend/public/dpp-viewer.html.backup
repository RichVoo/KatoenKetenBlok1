            gap: 10px;
            font-size: 15px;
        }

        .detail-label {
            font-weight: 600;
            color: #475569;
            min-width: 120px;
        }

        .detail-value {
            color: #1e293b;
        }

        .qr-code {
            width: 150px;
            height: 150px;
            background: white;
            border: 3px solid #3b82f6;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 80px;
            margin-left: auto;
        }

        .timeline {
            position: relative;
            padding-left: 40px;
            margin-top: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 12px;
            top: 0;
            bottom: 0;
            width: 3px;
            background: linear-gradient(180deg, #3b82f6, #06b6d4);
        }

        .timeline-item {
            position: relative;
            margin-bottom: 30px;
            background: #f8fafc;
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #3b82f6;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -44px;
            top: 20px;
            width: 20px;
            height: 20px;
            background: white;
            border: 4px solid #3b82f6;
            border-radius: 50%;
            box-shadow: 0 0 0 4px white;
        }

        .timeline-item.completed::before {
            background: #10b981;
            border-color: #10b981;
        }

        .timeline-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 15px;
        }

        .timeline-title {
            font-size: 18px;
            font-weight: bold;
            color: #1e293b;
        }

        .timeline-date {
            font-size: 13px;
            color: #64748b;
            background: white;
            padding: 5px 12px;
            border-radius: 6px;
        }

        .timeline-content {
            color: #475569;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .timeline-data {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }

        .data-badge {
            background: white;
            padding: 10px 15px;
            border-radius: 8px;
            border: 2px solid #e2e8f0;
            font-size: 13px;
        }

        .data-badge strong {
            color: #1e293b;
            display: block;
            margin-bottom: 5px;
        }

        .data-badge span {
            color: #64748b;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-badge.success {
            background: #d1fae5;
            color: #065f46;
        }

        .verification-section {
            margin-top: 30px;
            padding: 25px;
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            border-radius: 15px;
            border: 2px solid #10b981;
        }

        .verification-section h3 {
            color: #065f46;
            font-size: 20px;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .verification-items {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
        }

        .verification-item {
            background: white;
            padding: 15px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .verification-icon {
            font-size: 24px;
        }

        .verification-text {
            flex: 1;
        }

        .verification-text strong {
            display: block;
            color: #1e293b;
            font-size: 14px;
            margin-bottom: 3px;
        }

        .verification-text span {
            color: #64748b;
            font-size: 12px;
        }

        @media (max-width: 1024px) {
            .stage {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .stage-number {
                width: 50px;
                height: 50px;
                font-size: 20px;
            }

            .dpp-product-info {
                grid-template-columns: 1fr;
            }

            .qr-code {
                margin-left: 0;
            }

            .timeline-data {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

